<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/IconImage"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tinaio"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IconImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="ورود به تینایو"
                android:textColor="@color/gradstart"
                android:textSize="30sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:layout_gravity="right"
                        android:text="شماره موبایل"
                        android:textColor="@color/colorWhite"/>

                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="right"
                        android:padding="10dp"
                        android:inputType="number"
                        android:maxLength="11"
                        android:layout_margin="10dp"
                        android:background="@drawable/et_bg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/username"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:layout_gravity="right"
                        android:text="رمزعبور"
                        android:textColor="@color/colorWhite"/>

                    <EditText
                        android:id="@+id/user_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="right"
                        android:padding="10dp"
                        android:inputType="textPassword"
                        android:layout_margin="10dp"
                        android:background="@drawable/et_bg"/>
                </LinearLayout>
                
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:padding="10dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_back"
                    android:backgroundTint="@color/gradstart"
                    android:textStyle="bold"
                    android:text="ورود"/>
                <TextView
                    android:id="@+id/question_text"
                    android:layout_below="@+id/btn_login"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:layout_gravity="right"
                    android:text="تاکنون ثبت نام نکرده اید؟"
                    android:textColor="@color/colorWhite"/>
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question_text"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_back"
                    android:backgroundTint="@color/gradstart"
                    android:textStyle="bold"
                    android:text="با همین اطلاعات ثبت نام میکنم"/>
                
            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>