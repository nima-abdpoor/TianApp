<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5F3F8"
    tools:context=".login.LoginActivity">

            <ImageView
                android:id="@+id/IconImage"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tinaio"
                android:contentDescription="@string/app_name" />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_below="@id/IconImage"
                android:layout_marginBottom="5dp"
                android:outlineAmbientShadowColor="#000000"
                app:cardElevation="30dp"
                android:backgroundTint="#39BB30"
                android:background="#39BB30"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/phone_number"
                        android:hint="نام کاربری خود را وارد نمایید"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:layout_marginHorizontal="20dp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@drawable/et_bg"/>
                <EditText
                    android:textStyle="bold"
                    android:layout_below="@id/phone_number"
                    android:id="@+id/user_password"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="رمز عبور خود را وارد نمایید"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/et_bg"/>
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_password"
                    android:padding="10dp"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_back"
                    android:backgroundTint="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="ورود"/>
                <TextView
                    android:id="@+id/question_text"
                    android:layout_below="@+id/btn_login"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:layout_gravity="right"
                    android:text="تاکنون ثبت نام نکرده اید؟"
                    android:alpha="0.3"
                    android:textColor="#0C0C0C"/>
                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question_text"
                    android:padding="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/button_back"
                    android:backgroundTint="#4600FF"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="با همین اطلاعات ثبت نام میکنم"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="10dp"
        android:id="@+id/help_buttons"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/card_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:shadowColor="#000000"
                android:elevation="20dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/et_bg"
                android:id="@+id/help"
                android:text="راهنما"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/et_bg"
                android:id="@+id/coverage"
                android:text="پشتیبانی"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="تینایو | آینده این چنین است"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:background="#39BB30"
        android:gravity="center"/>

</RelativeLayout>